<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="MainView">

        <variable
            name="viewModel"
            type="<%= appPackage %>.core.viewmodel.MainViewModel" />

        <variable
            name="activity"
            type="<%= appPackage %>.core.activity.MainActivity" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_sign_in"
        onViewCreate="@{()->viewModel.showInformation(activity)}">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/card_view"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="Sample App"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:text="@{viewModel.greeting}"
                android:textSize="20sp" />


        </LinearLayout>
    </FrameLayout>
</layout>